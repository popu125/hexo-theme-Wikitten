<% if (site.posts.length) { %>
    <div class="widget-wrap widget-list">
        <h3 class="widget-title"><span><%= __('widget.links') %></span></h3>
        <div class="widget">
            <ul>
                <% for (var i in theme.miscellaneous.links) { %>
                    <li>
                        <a class="link" href="<%- theme.miscellaneous.links[i].link %>" title="<%- theme.miscellaneous.links[i].desc %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
<% } %>